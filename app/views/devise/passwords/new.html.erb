<h2 class="text-center fw-bold mt-5">Forgot Your Password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="text-center">
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", style: "width:75%", class:"mt-3 fs-5" %>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-outline-dark mt-2"%>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

