<h2 class="text-center fw-bold mt-5">Log In</h2>

<div class="text-center"> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", style: "width:75%", class:"mt-3 fs-5" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", style: "width:75%", class:"mt-3 fs-5" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, style:"transform: scale(1.5);", class:"mt-3 me-2"%>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div id="form-buttons" class="d-flex flex-column justify-content-between ms-auto me-auto mt-2" style="width:18rem;">
    <div class="actions">
      <%= f.submit "Log in" , data: {turbo:false}, class:"btn btn-dark mt-2"%>
      <%= render "devise/shared/links" %>
    </div>
    
    <% end %>
    
  </div>

</div>

