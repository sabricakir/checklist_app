<h3> <%= @item.title %> </h3>
<p> <%= @item.description %> </p>
<%= link_to "Back To All Items", root_path, class:"btn btn-success"%>
<%= link_to "Edit This Item", edit_item_path(@item), class:"btn btn-secondary"%>
<%= button_to "Delete This Item", item_path(@item), method: :delete, class:"btn btn-danger", form: {data: {turbo_confirm: 'Are you sure?'}}%>
<hr/>